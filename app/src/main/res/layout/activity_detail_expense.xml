<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="detailExpenseViewModel"
            type="com.cursoandroid.gestordegastos.viewModels.DetailExpenseViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.DetailExpenseActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:text="@{detailExpenseViewModel.expense.date}"
                    android:textSize="20sp"
                    tools:text="Fecha" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:text="@{detailExpenseViewModel.expense.account}"
                    android:textSize="32sp"
                    tools:text="Account" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:text="@{detailExpenseViewModel.expense.currency}"
                    android:textColor="@color/black"
                    tools:text="Currency" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:text="@{detailExpenseViewModel.expense.category}"
                    android:textSize="32sp"
                    tools:text="Category" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@{detailExpenseViewModel.expense.provider}"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    tools:text="Provider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:textColor="@color/darkBlue"
                    android:text="@{detailExpenseViewModel.expense.amount}"
                    android:textSize="32sp"
                    tools:text="$457" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cantidad:"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@{detailExpenseViewModel.expense.itemQuantity}"
                        android:textColor="@color/black"
                        tools:text="4" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="DescripciÃ³n"
                    android:textColor="@color/darkBlue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@{detailExpenseViewModel.expense.description}"
                    android:textColor="@color/black"
                    tools:text="descripcion ejemplo" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>